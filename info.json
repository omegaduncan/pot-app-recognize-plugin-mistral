{
  "id": "plugin.com.omegaduncan.mistral_recognize",
  "plugin_type": "recognize",
  "icon": "mistral.svg",
  "display": "Mistral",
  "homepage": "https://github.com/omegaduncan/pot-app-recognize-plugin-mistral",
  "needs": [
    {
      "key": "apiKey",
      "display": "API Key",
      "type": "input"
    },
    {
      "key": "llmModel",
      "display": "LLM 模型",
      "type": "input",
      "default": "gpt-4o"
    },
    {
      "key": "requestPath",
      "display": "LLM API 路徑",
      "type": "input",
      "default": "https://api.openai.com"
    },
    {
      "key": "llmApiKey",
      "display": "LLM API Key",
      "type": "input"
    },
    {
      "key": "customPrompt",
      "display": "自定義 Prompt",
      "type": "input",
      "default": "請分析下列 OCR 取得的文字，找出重點並整理格式："
    },
    {
      "key": "enableLLM",
      "display": "啟用文字後處理",
      "type": "select",
      "options": {
        "false": "停用",
        "true": "啟用"
      },
      "default": "false"
    }
  ],
  "language": {
    "auto": "Auto",
    "zh_cn": "Simplified Chinese",
    "zh_tw": "Traditional Chinese",
    "yue": "Cantonese",
    "ja": "Japanese",
    "en": "English",
    "ko": "Korean",
    "fr": "French",
